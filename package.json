{
  "name": "poly-package",
  "version": "1.0.0",
  "description": "A package that works in many environments and runtimes",
  "main": "src/index.js",
  "exports": {
    "import": {
      "browser": "dist/poly.esm.js",
      "node": "dist/poly.node.js",
      "deno": "dist/poly.deno.js"
    },
    "require": "dist/poly.node.cjs.js"
  },
  "scripts": {
    "build": "rm -f dist/* && npm-run-all --parallel build-esm build-deno build-node build-browser build-browser-bundle build-node-cjs",
    "build-esm": "node scripts/build-esm.js",
    "build-deno": "node scripts/build-deno.js",
    "build-node": "node scripts/build-node.js",
    "build-node-cjs": "node scripts/build-node-cjs.js",
    "build-browser": "node scripts/build-browser.js",
    "build-browser-bundle": "node scripts/build-browser-bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Sam Gwilym",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.11.11",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "dot-beat-time": "^1.2.1"
  }
}
